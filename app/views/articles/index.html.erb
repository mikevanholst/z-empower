<h1>Latest News:</h1>


<% @articles.each do |article| %>
  <div class='article_display'>
    <h2><%= link_to article.title, article_path(article) %></h2>
      <%= article.media %>
    <p><%= article.teaser %></p>
    <em class="author">By <%= article.author %></em><br>
    <span class='published_on'>Published on <%= article.posted_on %></span>
  </div>    
<% end %>
  <%= link_to 'New Article', new_article_path %>
