   <div class="row ">   


      <h1>Blog Posts:</h1>



<% @blogs.each do |blog| %>
  <div class='blog_display'>
    <h2><%= link_to blog.title, blog_path(blog) %></h2>
      <%= blog.media %>
    <p><%=raw blog.teaser %></p>
    <em class="author">By <%= blog.author %></em><br>
    <span class='published_on'>Published on <%= blog.posted_on %></span>
  </div>    
<% end %>
  <%= link_to 'New Blog', new_blog_path %>
